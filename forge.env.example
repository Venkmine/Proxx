# =============================================================================
# Forge Environment Configuration
# =============================================================================
# Copy this file to .env and modify as needed.
# All variables are optional - Forge will use sensible defaults.
# =============================================================================

# -----------------------------------------------------------------------------
# Licensing
# -----------------------------------------------------------------------------
# License tier: FREE | PRO | STUDIO
# If not set, Forge reads from forge_license.json or defaults to FREE.
# FORGE_LICENSE_TYPE=FREE

# -----------------------------------------------------------------------------
# Backend API
# -----------------------------------------------------------------------------
# Backend API host and port
# FORGE_API_HOST=127.0.0.1
# FORGE_API_PORT=8085

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# Path to monitoring database (SQLite)
# FORGE_DB_PATH=./awaire_proxy.db

# -----------------------------------------------------------------------------
# Resolve Integration
# -----------------------------------------------------------------------------
# Override Resolve scripting API path (advanced)
# PROXX_RESOLVE_SCRIPT_API_PATH=/path/to/resolve/scripts

# Resolve project name for proxy jobs
# FORGE_RESOLVE_PROJECT=Forge_Proxies

# -----------------------------------------------------------------------------
# Watch Folders
# -----------------------------------------------------------------------------
# Default watch folder path (V2 automation)
# FORGE_WATCH_FOLDER=/path/to/watch/folder

# Polling interval for watch folder (seconds)
# FORGE_POLL_SECONDS=5

# Maximum concurrent workers for watch folder
# FORGE_MAX_WORKERS=4

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Log level: DEBUG | INFO | WARNING | ERROR
# FORGE_LOG_LEVEL=INFO

# Log file path (empty = stdout only)
# FORGE_LOG_FILE=./forge.log

# -----------------------------------------------------------------------------
# Development
# -----------------------------------------------------------------------------
# Enable debug mode (extra logging, dev features)
# FORGE_DEBUG=false

# Enable hot reload for backend (development only)
# FORGE_HOT_RELOAD=true
